<%-include('../../partials/header.ejs') %>
<%-include('../../partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h2>
            Categorias
        </h2>
        <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Titulo</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category =>{ %>
                    <tr>
                        <td><%= category.id %></td>
                        <td><%= category.tittle %></td>
                        <td><%= category.slug %></td>
                        <td>
                            <a href="/admin/categories/edit/<%=category.id %>" class="btn btn-warning">Editar</a>
                            
                            <form method="POST" action="/categories/delete" style="display: inline" onsubmit="confirmDel(event, this)">
                                <input type="hidden" name="id" value="<%= category.id %>">
                                <button type="submit" class="btn btn-danger">Deletar</button>

                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <hr>
    </div>


<%-include('../../partials/footer.ejs')%>

<script>
    function confirmDel(event, form){
        event.preventDefault();
        var choice = confirm("Você tem certeza que irá deletar essa categoria?")
        if(choice){
            form.submit()
        }else{
        alert("Operação cancelada!")
         }
    }
</script>






